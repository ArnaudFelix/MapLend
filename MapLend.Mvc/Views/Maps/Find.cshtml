@model MapLend.Mvc.Models.FindMapViewModel
@{
    ViewBag.Title = "Find";
}

<h2>Rejoindre un map :</h2>
<h4>Près de chez moi</h4>
@using (Html.BeginForm("Subscribe", "Maps", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.DropDownListFor(model => model.Id, new SelectList(Model.ProximityMaps, "Id", "Name"), new { htmlAttributes = new { @class = "form-control" } })
    <input type="submit" value="Rejoindre" />
}

<h4>Par son nom :</h4>
@using (Html.BeginForm("Find", "Maps", FormMethod.Get))
{
    <input type="text" name="name" />
    <input type="submit" value="Chercher" />
}
@using (Html.BeginForm("Subscribe", "Maps", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.DropDownListFor(model => model.Id, new SelectList(Model.NamedMaps, "Id", "Name"), new { htmlAttributes = new { @class = "form-control" } })
    <input type="submit" value="Rejoindre" />
}

<h4>Aucune MAP ne vous convient ? Créez la vôtre : </h4>
@using (Html.BeginForm("Create", "Maps", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <input type="text" name="newMapName" />
    <input type="submit" value="Créer !" />
}