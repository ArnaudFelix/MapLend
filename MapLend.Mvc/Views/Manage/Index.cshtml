@model MapLend.Mvc.Models.IndexViewModel
@{
    ViewBag.Title = "Gérer";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Changer les paramètres de votre compte</h4>
    <hr />
    @using (@Html.BeginForm("Index", "Manage", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken();
        <dl class="dl-horizontal">
            <dt>Mot de passe :</dt>
            <dd>
                [
                @if (Model.HasPassword)
                {
                    @Html.ActionLink("Changer votre mot de passe", "ChangePassword")
                }
                else
                {
                    @Html.ActionLink("Créer", "SetPassword")
                }
                ]
            </dd>
            <dt>
                @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })
            </dt>
            <dd>
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
            </dd>
            <dt>
                @Html.LabelFor(m => m.SurName, new { @class = "col-md-2 control-label" })
            </dt>
            <dd>
                @Html.TextBoxFor(m => m.SurName, new { @class = "form-control" })
            </dd>
            <dt>
                @Html.LabelFor(m => m.Address1, new { @class = "col-md-2 control-label" })
            </dt>
            <dd>
                @Html.TextBoxFor(m => m.Address1, new { @class = "form-control" })
            </dd>
            <dt>
                @Html.LabelFor(m => m.Address2, new { @class = "col-md-2 control-label" })
            </dt>
            <dd>
                @Html.TextBoxFor(m => m.Address2, new { @class = "form-control" })
            </dd>
            <dt>
                @Html.LabelFor(m => m.ZipCode, new { @class = "col-md-2 control-label" })
            </dt>
            <dd>
                @Html.TextBoxFor(m => m.ZipCode, new { @class = "form-control" })
            </dd>
            <dt>
                @Html.LabelFor(m => m.City, new { @class = "col-md-2 control-label" })
            </dt>
            <dd>
                @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
            </dd>
            <dt>Photo :</dt>
            <dd>
                <img src="Manage/Photo" />
                <input type="file" name="photo" />
            </dd>
        </dl>
        <input type="submit" value="Valide" />
    }
</div>