@model MapLend.Mvc.Models.IndexViewModel
@{
    ViewBag.Title = "Gérer";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Changer les paramètres de votre compte</h4>
    <hr />
    @using (@Html.BeginForm("Index", "Manage", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken();
        <dl class="dl-horizontal">
            <dt>Mot de passe :</dt>
            <dd>
                [
                @if (Model.HasPassword)
                {
                    @Html.ActionLink("Changer votre mot de passe", "ChangePassword")
                }
                else
                {
                    @Html.ActionLink("Créer", "SetPassword")
                }
                ]
            </dd>
            <dt>Prénom :</dt>
            <dd>@Html.EditorFor(m => m.Firstname)</dd>
            <dt>Nom :</dt>
            <dd>@Html.EditorFor(m => m.Surname)</dd>
            <dt>Photo :</dt>
            <dd>
                <img src="../Manage/Photo" />
                <input type="file" name="photo" />
            </dd>
        </dl>
        <input type="submit" value="Valide" />
    }
</div>
